{
  "expo": {
    "name": "CommuteTimely",
    "slug": "commutetimely",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#ffffff",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.commutetimely.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CommuteTimely needs access to your location to calculate accurate commute times and provide timely departure notifications.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "CommuteTimely needs background location access to send you timely commute notifications even when the app is closed.",
        "NSLocationAlwaysUsageDescription": "CommuteTimely uses your location to provide smart commute timing notifications.",
        "UIBackgroundModes": [
          "location",
          "background-processing",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.commutetimely.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "ACCESS_WIFI_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxMapsDownloadToken": "pk.eyJ1IjoiY29tbXV0ZXRpbWVseSIsImEiOiJjbWUzMzUydmcwMmN1MmtzZnoycGs1ZDhhIn0.438vHnYipmUNS7JoCglyMg"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "CommuteTimely uses your location to provide smart commute timing notifications.",
          "locationAlwaysPermission": "CommuteTimely needs background location access to send timely notifications.",
          "locationWhenInUsePermission": "CommuteTimely needs location access to calculate commute times.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#007AFF",
          "defaultChannel": "default"
        }
      ]
    ],
    "scheme": "commutetimely",
    "extra": {
      "eas": {
        "projectId": "commutetimely-project"
      }
    }
  }
}
